@model Employee_MVCApp.Models.UserModel


@section ValidationScript
    {

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}


<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-6 offset-3">

            <div class="row">
                <form method="post" action="Register">
                    <table class="table">
                        <tr>
                            <th>First Name</th>
                            <td>
                                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                                <span class="text-danger">
                                    @Html.ValidationMessageFor(x => x.FirstName)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <th>Last Name</th>
                            <td>
                                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                                <span class="text-danger">
                                    @Html.ValidationMessageFor(x => x.LastName)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <th>Gender</th>
                            <td>
                               
                               Male : @Html.RadioButtonFor(x => x.Gender,"M",new { group = "rdbGender" })
                               Female :  @Html.RadioButtonFor(x => x.Gender,"F",new { group = "rdbGender" })
                                <span class="text-danger">
                                    @Html.ValidationMessageFor(x => x.Gender)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <th>Email Address</th>
                            <td>
                                @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control" })
                                <span class="text-danger">
                                    @Html.ValidationMessageFor(x => x.EmailAddress)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <th>Mobile No.</th>
                            <td>
                                @Html.TextBoxFor(x => x.Mobile, new { @class = "form-control" })
                                <span class="text-danger">
                                    @Html.ValidationMessageFor(x => x.Mobile)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
                                <span class="text-danger">
                                    @Html.ValidationMessageFor(x => x.Password)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <th>Confirm Password</th>
                            <td>
                                @Html.TextBoxFor(x => x.cnfPassword, new { @class = "form-control", type = "password" })
                                <span class="text-danger">
                                    @Html.ValidationMessageFor(x => x.cnfPassword)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </td>
                        </tr>
                    </table>
                </form>

            </div>

        </div>
    </div>
</div>

